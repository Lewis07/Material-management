{% block title %}<title>Connexion</title>{% endblock %}
{% block stylesheets %}
    <!-- Bootstrap -->
    <link rel="stylesheet" href="{{ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}">
    <style>
        body{
            background-color: rgba(0,0,0,0.7);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container" style="margin:10% 0;">
        <div class="row">
            <div class="col-sm-4"></div>
            <div class="col-sm-4">
                    <div class="card mt-9">
                        {% if error %}
                            <div class="bg-danger">
                                <p class="text-white px-2 py-2">{{ message_erreur }}</p>
                            </div>
                        {% endif %}
                        <div class="card-body">
                            <form action="{{ path('security.login') }}" method="post">
                                <div class="form-group">
                                    <label for="username">Login</label>
                                    <input type="text" id="username" class="form-control" name="_username"/>
                                </div>
                                <div class="form-group">
                                    <label for="password">Mot de passe</label>
                                    <input type="password" id="password" class="form-control" name="_password" />
                                </div>
                                <div align="center">
                                    <button type="submit" class="btn btn-info active" style="width:49%;">Se connecter</button>
                                </div>
                            </form>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}