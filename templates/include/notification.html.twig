

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                <i class="fas fa-check" style="font-size:1.2em;"></i> {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

      
